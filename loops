const friends = [ "elon", "mark", "tata", "amvani"];
console.log(friends);

for (const friend of friends){
    // console.log(friend);
}
//array with for loop
// Problem: friends er 3 index er por value undifine ashte thake
for( let i = 0; i < 10 ; i++){
    console.log(i);
    console.log(friends[i]);
}
//solved: i er value friends er length er kom kore dibo
for( let i = 0; i < friends.length ; i++){
    console.log(i);
    console.log(friends[i]);
} 

// array with while loop
let i = 0;
while(i < friends.length){
    console.log(friends[i]);
    i++;
}